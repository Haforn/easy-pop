<div class="page">
	<% if @total_hours > 0 %>
		<h3>De Rekening</h3>
		<ul class="hour-list">
		<% competency.learn_moments.each do |learn_moment| %>
			<li>	
				<%= learn_moment.title %>
				<% if learn_moment.hours != nil %>		
					<span class="hours">
						<%= @hours_list[learn_moment.hours - 1] %> uren
					</span>
				<% end %>
			</li>
		<% end %>

			<li>
				<strong>
					Totaal: 
					<span class="hours">
						<%= @total_hours / 2 %> uren
					</span>
				</strong>
			</li>
		</ul>
	<% end %>
</div>