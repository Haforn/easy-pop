<% if @total_hours > 0 %>
	<div class="page">	
		<h3>De rekening leermomenten</h3>
		<ul class="hour-list">
		<% competency.learn_moments.each do |learn_moment| %>
			<li>	
				<%= learn_moment.title %>
				<% if learn_moment.hours != nil %>		
					<span class="hours">
						<%= learn_moment.hours %> uren
					</span>
				<% end %>
			</li>
		<% end %>
			<li>
				<strong>
					Totaal: 
					<span class="hours">
						<%= @total_hours %> uren
					</span>
				</strong>
			</li>
		
		</ul>

		<% @total_hours = 0 %>
		
		<ul class="hour-list">
		<h3>De rekening logboek</h3>
		<%= render 'log_moments', competency: competency %>
		
			<li>
				<strong>
					Totaal: 
					<span class="hours">
						<%= @total_hours %> uren
					</span>
				</strong>
			</li>
		</ul>
	</div>
<% end %>


