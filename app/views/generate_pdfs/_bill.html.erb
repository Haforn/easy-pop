<% if @total_hours > 0 %>
	<div class="page">	
		<h3>De Rekening</h3>
		<ul class="hour-list">
		<% competency.learn_moments.each do |learn_moment| %>
			<li>	
				<%= learn_moment.title %>
				<% if learn_moment.hours != nil %>		
					<span class="hours">
						<%= @hours_list[learn_moment.hours - 1] %> uren
					</span>
				<% end %>
			</li>
		<% end %>

		<%= render 'log_moments', competency: competency %>

			<li>
				<strong>
					Totaal: 
					<span class="hours">
						<%= @total_hours %> uren
					</span>
				</strong>
			</li>
		</ul>
	</div>
<% end %>
