if ($('#feedback-btn').hasClass('active')) {
	$('#feedback-btn, .feedback-container, .overlay').removeClass('active');
	setTimeout(function() {
		$('.feedback').remove();
	}, 300);
} else {
	$('.feedback-container').append('<%= j render("form") %>');
	$('.feedback-container, #feedback-btn, .overlay').addClass('active');
}


$('.overlay').on('click', function(e) {
	if ($('#feedback-btn').hasClass('active')) {
		$('#feedback-btn, .feedback-container, .overlay').removeClass('active');
		setTimeout(function() {
			$('.feedback').remove();
		}, 300);
	}
});