<%= form_for @learn_moment, html: { :multipart => true } do |f| %>
		<%= error_messages_for @learn_moment %>

		<li>
			<%= f.label :title, "Learn Moment" %>
			<%= f.text_field :title  %>
		</li>

		<li>
			<%= f.label :what_was_learned %>
			<%= f.text_area :what_was_learned  %>
		</li>

		<li>
			<%= f.label :what_was_done %>
			<%= f.text_area :what_was_done  %>
		</li>
			
		<li>
	    <%= f.label :image %>
	    <%= f.file_field :image %>
	  </li>

		<li>
			<%= f.label :reference %>
			<%= f.text_field :reference  %>
		</li>

		<li>
			<%= f.label :hours, "Hours spend" %>
			<%= f.select(:hours, @hour_list) %>
		</li>

		<% if @competency %>
			<%= f.hidden_field :competency_id, :value => @competency.id %>
		<% end %>
		<li>
			<%= f.submit nil, :class => "btn new left" %>
		</li>
	<% end %>

</ul>