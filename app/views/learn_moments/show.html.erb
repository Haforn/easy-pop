<div class='left'>
	<%= render 'list' %>
</div>

<div class='right'>
	<div class='container'>
		<%= link_to 'Bewerken', edit_learn_moment_path, class: 'btn edit pensil' %>

		<h2>Leermoment details</h2>

		<div class='learnmoment-detail'>
			<p>
				<i>
					<%= @learn_moment.competency.title %>
				</i>
			</p>

			<p class='title'>
				<strong><%= @learn_moment.title %></strong>
					<span class='hours'>
						<%= @learn_moment.hours %> uren
					</span>
			</p>
			<% if !@learn_moment.what_was_learned.blank? %> 
				<p>
					<span class='detail-label'>Wat is er geleerd?</span>
					<%= simple_format(@learn_moment.what_was_learned) %>
				</p>
			<% end %>
			<% if !@learn_moment.what_was_done.blank? %>
				<p>
					<span class='detail-label'>Wat is er gedaan?</span>
					<%= simple_format(@learn_moment.what_was_done) %>
				</p>
			<% end %>
			<% if !@learn_moment.reference.blank? %>
				<p>
					<span class='detail-label'>Referentie</span>
					<%= @learn_moment.reference %>
				</p>
			<% end %>

			<% if !@learn_moment.image.blank? %> 
			<p>
				<span class='detail-label'>Referentie afbeelding</span>
				<%= image_tag @learn_moment.image %>
			</p>
			<% end %>
			<p>
				<span class='detail-label'>Laatst bijgewerkt</span>
				<%= @learn_moment.updated_at.strftime '%d/%m/%Y %H:%M' %>
			</p>

		</div>
	</div>
</div>