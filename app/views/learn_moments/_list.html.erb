<div class='container'>
	<div class='view clearfix <%= 'bg-none learn_moments_overview' if controller_name == 'learn_moments' %>'>
	<% if @competency.learn_moments.any? %>
		<% if controller_name != 'learn_moments' %>
			<%= link_to 'Leermoment', new_learn_moment_path(competency_id: @competency.id), class: 'btn new plus margin-fix' %>
			<h4 style='display: inline;'>Leermomenten</h4>
		<% else %>
			<h3>Leermomenten</h3>
		<% end %>
		<div class='clearfix'></div>
		<div class='learn-moment'>
			<ul>
			<% cycle('odd') %>
				<% @competency.learn_moments.each do |learn_moment| %>
					<li class='<%= cycle('odd', 'even') if controller_name != 'learn_moments' %>'>
						<p>
							<%= link_to learn_moment.title, learn_moment_path(learn_moment), class: 'basic-link' %>
						</p>
					</li>
				<% end %>
			</ul>
		</div>
	<% else %>
		<%= link_to 'Leermoment', new_learn_moment_path(competency_id: @competency.id), class: 'btn new plus margin-fix' %>
		<h3 class='block'>Voeg je eerste leermoment toe!</h3>
	<% end %>
		
	</div>
</div>