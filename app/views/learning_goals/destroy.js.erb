
var el = 0;

$('.learning-goals').find('li').each(function() {
	if ($(this).attr('data-id') == <%= @learning_goal.id %>) {
		el = $(this);
	}
});

el.remove();
$('.edit-form').remove();

$('.learning-goals').find('li').each(function(i) {
	if (i % 2 === 0) {
		$(this).removeClass('odd').removeClass('even').addClass('odd')
	} else {
		$(this).removeClass('odd').removeClass('even').addClass('even')
  }	
});

if ($('.js-learning-goals').find('li').length < 1) {
	$('.js-learning-goals').html('<h3 class="note">Vergeet niet je leerdoelen toe te voegen!</h3>')
}
