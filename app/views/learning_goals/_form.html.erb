<%= form_for @learning_goal do |f| %>
	<ul><%= error_messages_for(@learning_goal) %>
		<li>
			<%= f.label :title, 'Leerdoel' %>
			<%= f.text_area :title  %>
		</li>

		<li>
			<%= f.check_box :achieved %>
			<%= f.label :achieved, 'Leerdoel behaald?' %>
		</li>
		<% if @competency %>
			<%= f.hidden_field :competency_id, value: @competency.id %>
		<% end %>

		<br>

		<li>
			<%= f.submit 'Leerdoel toevoegen', data: { disable_with: 'Aan het versturen...' }, class: 'btn new left bigger'  %>
		</li>
	</ul>
<% end %>