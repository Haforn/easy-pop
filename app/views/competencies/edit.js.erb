if ($('.pop-up').hasClass('active')) {
	removePopUp();
} else {
	$('.pop-up > .container').append('<%= j render("edit") %>');
	$('.pop-up, .overlay').addClass('active');
}

$('.overlay').on('click', function() {
	removePopUp();
});

function removePopUp() {
	if ($('.pop-up').hasClass('active')) {
		$('.pop-up, .overlay').removeClass('active');
		setTimeout(function() {
			$('.pop-up > .container').html('');
		}, 300);
	}	
}