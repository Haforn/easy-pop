<%= link_to 'Competencie', edit_competency_path, class: 'btn edit in-top' %>

<h2>
	<%= @competency.title %>
	<i class='ec'>
		<%= @competency.points %> ec 
		<%= @competency.expertise %>
	</i>
</h2>

<% if @competency.learning_goals.any? %>
	<div class='learning-goals'>
		<h4>Leerdoelen</h4>
		<ul>
			<% @competency.learning_goals.each do |learning_goal| %>
				<% if learning_goal.achieved %>
					<% achieved = 'achieved' %>
				<% else %>
					<% achieved = 'not-achieved' %>
				<% end %>
				<li class='<%= cycle('odd', 'even') %> <%= achieved %>'>
					<%= link_to 'Bewerken', edit_learning_goal_path(learning_goal.id), class: 'btn small edit' %>
					<p>
					 	<%= learning_goal.title %>
					</p>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>

<h4>Leerdoel toevoegen</h4>

<%= render 'learning_goals/form' %>